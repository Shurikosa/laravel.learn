APP_NAME=Laravel              # Назва програми, використовується у різних місцях програми.
APP_ENV=local                 # Оточення, в якому працює додаток (local, production тощо).
APP_KEY=base64:znSFWXvg...    # Секретний ключ додатку, використовується для шифрування даних.
APP_DEBUG=true                # Увімкнення/вимкнення режиму налагодження (true для виведення помилок).
APP_TIMEZONE=UTC              # Часовий пояс, який використовується додатком.
APP_URL=http://localhost      # Базовий URL додатку, використовується для генерації посилань.

APP_LOCALE=en                 # Основна локалізація додатку (мова інтерфейсу).
APP_FALLBACK_LOCALE=en        # Резервна локалізація, якщо основна недоступна.
APP_FAKER_LOCALE=en_US        # Локалізація для генерації тестових даних (faker).

APP_MAINTENANCE_DRIVER=file   # Драйвер для зберігання стану обслуговування (maintenance mode).
# APP_MAINTENANCE_STORE=database  # Опціональний параметр для зберігання стану обслуговування в базі даних.

BCRYPT_ROUNDS=12              # Кількість раундів для хешування паролів за допомогою bcrypt.

LOG_CHANNEL=stack             # Основний канал для запису логів.
LOG_STACK=single              # Тип каналу лога (один файл для всіх записів).
LOG_DEPRECATIONS_CHANNEL=null # Канал для запису попереджень про застарілі функції.
LOG_LEVEL=debug               # Рівень логування (debug, info, warning, error тощо).

DB_CONNECTION=sqlite          # Тип підключення до бази даних (тут використовується SQLite).
#DB_HOST=127.0.0.1            # Хост бази даних (закоментовано, не використовується для SQLite).
#DB_PORT=3306                 # Порт бази даних (закоментовано, не використовується для SQLite).
#DB_DATABASE=laravel          # Назва бази даних (закоментовано, не використовується для SQLite).
#DB_USERNAME=root             # Ім'я користувача для бази даних (закоментовано).
#DB_PASSWORD=                 # Пароль для доступу до бази даних (закоментовано).

SESSION_DRIVER=database       # Драйвер сесій (зберігання сесій у базі даних).
SESSION_LIFETIME=120          # Тривалість життя сесії (в хвилинах).
SESSION_ENCRYPT=false         # Чи потрібно шифрувати сесії (false – не шифрувати).
SESSION_PATH=/                # Шлях для файлів сесій.
SESSION_DOMAIN=null           # Домен для сесій (null – використовувати стандартний).

BROADCAST_CONNECTION=log      # З'єднання для трансляції подій (логування подій).
FILESYSTEM_DISK=local         # Драйвер файлової системи (зберігання файлів локально).
QUEUE_CONNECTION=database     # З'єднання для черги завдань (зберігання черг у базі даних).

CACHE_STORE=database          # Драйвер кешу (зберігання кешу у базі даних).
CACHE_PREFIX=                 # Префікс для ключів кешу (порожній).

MEMCACHED_HOST=127.0.0.1      # Хост для Memcached (якщо використовується).

REDIS_CLIENT=phpredis         # Клієнт для роботи з Redis.
REDIS_HOST=127.0.0.1          # Хост для Redis.
REDIS_PASSWORD=null           # Пароль для доступу до Redis (null – без паролю).
REDIS_PORT=6379               # Порт для підключення до Redis.

MAIL_MAILER=log               # Метод відправки пошти (логувати поштові повідомлення).
MAIL_HOST=127.0.0.1           # Хост SMTP-сервера для відправки пошти.
MAIL_PORT=2525                # Порт SMTP-сервера.
MAIL_USERNAME=null            # Ім'я користувача для SMTP (null – не вказано).
MAIL_PASSWORD=null            # Пароль для SMTP (null – не вказано).
MAIL_ENCRYPTION=null          # Шифрування для SMTP (null – без шифрування).
MAIL_FROM_ADDRESS="hello@example.com" # Відправник за замовчуванням.
MAIL_FROM_NAME="${APP_NAME}"  # Ім'я відправника (використовує значення APP_NAME).

AWS_ACCESS_KEY_ID=            # Ідентифікатор доступу AWS (якщо використовується).
AWS_SECRET_ACCESS_KEY=        # Секретний ключ доступу AWS.
AWS_DEFAULT_REGION=us-east-1  # Регіон AWS за замовчуванням.
AWS_BUCKET=                   # Назва AWS S3 бакету (якщо використовується).
AWS_USE_PATH_STYLE_ENDPOINT=false # Використовувати стилізовані шляхом точки доступу.

VITE_APP_NAME="${APP_NAME}"   # Ім'я програми для Vite (фронтенд-частина).
